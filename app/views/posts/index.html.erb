<h1><u><em>WEBlog Posts</em></u></h1>

<div id="post-list">
	<% @posts.each do |post| %>
	<div class="posting">
		<div class="post-title"><%= link_to post.title, post %></div>
		<div class="post-content"><%= post.content %></div>
		<div class="post-creator"><em> - <%= post.name %></em></div>
		<div class="post-functions"> 
			<%= link_to 'Edit', edit_post_path(post) %> | 
			<%= link_to 'Remove', post, confirm: 'Are you sure?', method: :delete %>
		</div>
	</div>
	<% end %>
</div>

<br />

<%= link_to 'Create Post', new_post_path %>
